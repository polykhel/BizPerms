                                <option selected disabled>---Business Name---</option>
                                @foreach(var entity in Model)
                                {
                                    <option value="@entity.Id">@entity.BusinessName</option>
                                }
                            </select>*@
                    </div>
                    <div class="row">
                        <br />
                        <label class="col-md-3">Owner Name:</label>
                        <input type="text" id="OwnerName" class="form-control col-md-9" />
                    </div>
                    <div class="row">
                        <br />
                        <label class="col-md-3">Business Address:</label>
                        <textarea id="Address" class="form-control col-md-9"></textarea>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <div class="row">
                        <label class="col-md-3">Last Quarter Paid:</label>
                        <select id="lastQuarterPaid" class="form-control col-md-9">
                            <option>-----None----</option>
                        </select>

                    </div>
                    <div class="row" align="center">
                        <label><input type="radio" name="isNew" /> New</label>
                        <label><input type="radio" name="isNew" /> Renewal</label><br />
                        <button Type="submit" class="btn btn-info" id="btnCompute">Compute</button>
                    </div>
                </div>
            </div>
            <div class="row col-md-12">
                <table class="table table-bordered col-md-12">
                    <thead>
                        <tr style="background-color:#808080;color:#ffffff">
                            <th class="col-md-6">Fees</th>
                            <th class="col-md-2">Amount</th>
                            <th class="col-md-2">Surcharge</th>
                            <th class="col-md-2">Total Amount</th>
