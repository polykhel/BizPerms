@model BizPerms.Models.BusinessViewModel
@{
    ViewBag.Title = "Assessment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header text-center">
    <h1 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">Assessment</h1>
</div>
<form action="@Url.Action("Assesment")" method="post">
    <br />
    <br />
    <div class="panel panel-primary">
        <div class="panel-body col-md-12">
            <div class="row">
                <div class="form-group col-md-6">
                    <div class="row">
                        <label class="col-md-3">Business Name:</label>
                        @Html.DropDownList("BusinessName", Model.BusinessNames, "---Business Name---", new { @onChange = "location.href=this.options[this.selectedIndex].value;", @id = "BusinessName", @class = "form-control col-md-9" })
