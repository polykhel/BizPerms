@model G4.BizPermit.Entities.BankRecord

@{
    ViewBag.Title = "Edit";
}


<div class="page-header text-center">
    <h1 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">Bank</h1>
</div>

<div class="panel panel-warning">
    <div class="panel-heading">EDIT BANK</div>
    <div class="form-horizontal panel-body">
        <form action="@Url.Action("Edit")" method="post">
            <input type="hidden" name="UniqueId" value="@Model.UniqueId" />
           
            
            <div class="form-group">
                <label class="control-label col-md-2">Name:</label>
                <input type="text" class="form-control col-md-10" name="Name" value="@Model.Name" placeholder="Capital" required />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Active ?</label>
                <input type="radio" name="IsActive" value="true" checked /> True
                <input type="radio" name="IsActive" value="false" /> False
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Created Date:</label>
                <input type="date" class="form-control col-md-10" name="CreatedDate" value="@Model.CreatedDate.ToString("yyyy-MM-dd")" required />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">CreatedBy:</label>
                <input type="text" class="form-control col-md-10" name="CreatedBy" value="@Model.CreatedBy" placeholder="Created By" required />
            </div>

 
            <div class="form-group">
                <a href="@Url.Action("Index")" class="btn btn-danger col-sm-offset-2">
                    <span class="glyphicon glyphicon-arrow-left"></span>&nbsp; Cancel
                </a>
                <button type="reset" class="btn btn-warning">
                    <span class="glyphicon glyphicon-refresh"></span>&nbsp; Reset
                </button>
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-floppy-disk"></span>&nbsp; Save
                </button>
            </div>
        </form>
    </div>
</div>
