
@{
    ViewBag.Title = "Add Barangay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header text-center">
    <h1 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">BARANGAY</h1>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">ADD BARANGAY</div>
    <div class="form-horizontal panel-body">
        <form action="@Url.Action("Add")" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="control-label col-md-2">Barangay Code:</label>
                <input type="number" class="form-control col-md-10" name="Code" placeholder="Barangay Code" required/>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Barangay Name:</label>
                <input type="text" class="form-control col-md-10" name="Name" placeholder="Barangay Name" required/>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Description:</label>
                <input type="text" class="form-control col-md-10" name="Description" placeholder="Description" />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">District:</label>
                <select class="form-control col-md-10" name="DistrictId" required>
                    <option value="" selected disabled>- Select District -</option>
                    @foreach (var district in ViewBag.Districts)
                    {
                        <option value="@district.Id">@district.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Active:</label>
                <input type="radio" name="isActive" value="true" checked/> True
                <input type="radio" name="isActive" value="false"/> False
            </div>

            <div class="form-group">
                <a href="@Url.Action("Index")" class="btn btn-danger col-sm-offset-2">
                    <span class="glyphicon glyphicon-arrow-left"></span>&nbsp; Cancel
                </a>
                <button type="reset" class="btn btn-warning">
                    <span class="glyphicon glyphicon-refresh"></span>&nbsp; Reset
                </button>
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-floppy-disk"></span>&nbsp; Save
                </button>
            </div>
        </form>
    </div>
</div>