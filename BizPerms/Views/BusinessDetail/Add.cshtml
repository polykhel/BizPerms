@{
    ViewBag.Title = "Add Business Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header text-center">
    <h1 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">BUSINESS DETAIL</h1>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">ADD BUSINESS DETAIL</div>
    <div class="form-horizontal panel-body">
        <form action="@Url.Action("Add")" method="post">
            <div class="form-group">
                <label  class="control-label col-md-2">Business Line:</label>
                <select class="form-control col-md-10" name="BusinessLineId" required>
                    <option value="">- Select Business Line -</option>
                    @foreach (var line in ViewBag.businesslines)
                    {
                        <option value="@line.Id">@line.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label  class="control-label col-md-2">Birth Date:</label>
                <input type="date" class="form-control col-md-10" name="BirthDate" required/>
            </div>
            <div class="form-group">
                <label  class="control-label col-md-2">Capital:</label>
                <input type="number" step="0.01" class="form-control col-md-10" name="Capital" placeholder="Capital" required/>
            </div>
            <div class="form-group">
                <label  class="control-label col-md-2">Gross:</label>
                <input type="number" step="0.01" class="form-control col-md-10" name="Gross" placeholder="Gross" required/>
            </div>
            <div class="form-group">
                <label  class="control-label col-md-2">New?</label>
                <input type="radio" name="isNew " value="true" checked/> True
                <input type="radio" name="isNew " value="false" /> False
            </div>
            <div class="form-group">
                <label  class="control-label col-md-2">Last Pay Date:</label>
                <input type="date" class="form-control col-md-10" name="lastPayDate" required/>
            </div>

            <div class="form-group">
                <a href="@Url.Action("Index")" class="btn btn-danger col-sm-offset-2">
                    <span class="glyphicon glyphicon-arrow-left"></span>&nbsp; Cancel
                </a>
                <button type="reset" class="btn btn-warning">
                    <span class="glyphicon glyphicon-refresh"></span>&nbsp; Reset
                </button>
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-floppy-disk"></span>&nbsp; Save
                </button>
            </div>
        </form>
    </div>
</div>