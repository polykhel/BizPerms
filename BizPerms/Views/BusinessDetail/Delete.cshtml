@model G4.BizPermit.Entities.BusinessDetail
@{
    ViewBag.Title = "Delete Business Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header text-center">
    <h1 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">BUSINESS DETAIL</h1>
</div>

<div class="panel panel-danger">
    <div class="panel-heading">ARE YOU SURE YOU WANT TO DELETE THIS RECORD?</div>
    <div class="form-horizontal panel-body">

        <dl class="dl-horizontal">
            <dt>Business Line ID:</dt>
            <dd>@Model.BusinessLine.Name</dd>

            <dt>Birth Date:</dt>
            <dd>@Model.BirthDate.ToString("yyyy-MM-dd")</dd>

            <dt>Capital:</dt>
            <dd>@Model.Capital</dd>

            <dt>Gross:</dt>
            <dd>@Model.Gross</dd>

            <dt>New?</dt>
            <dd>@Html.DisplayFor(model => model.isNew)</dd>
            
            <dt>Last Pay Date:</dt>
            <dd>@Model.lastPayDate.ToString("yyyy-MM-dd")</dd>

        </dl>

        <form action="@Url.Action("Delete")" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="UniqueId" value="@Model.UniqueId" />
            <div class="form-group">
                <a href="@Url.Action("Index")" class="btn btn-primary col-sm-offset-2">
                    <span class="glyphicon glyphicon-arrow-left"></span>&nbsp; Cancel
                </a>
                <button type="submit" class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash"></span>&nbsp; Delete
                </button>
            </div>
        </form>
    </div>
</div>