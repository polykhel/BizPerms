@model List<G4.BizPermit.Entities.BusinessDetail>
@{
    ViewBag.Title = "Business Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header text-center">
    <h1 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">BUSINESS DETAIL</h1>
</div>

<div class="row" style="padding: 15px">
    <a type="button" class="btn btn-danger col-lg-1 col-md-2 col-sm-3 col-xs-3" aria-label="left Align" href="/Home">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back
    </a>
    <div class="col-lg-10 col-md-8 col-sm-6 col-xs-6"></div>
    <button type="button" class="btn btn-success col-lg-1 col-md-2 col-sm-3 col-xs-3" aria-label="left Align" onclick="location.href='@Url.Action("Add")'">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New
    </button>
</div>

<div class="panel panel-info">
    <div class="panel-body table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Business Line</th>
                    <th>Birth Date</th>
                    <th>Capital</th>
                    <th>Gross</th>
                    <th>New</th>
                    <th>Last Pay Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entity in Model)
                {
                    <tr>
                        <td>
                            @entity.BusinessLine.Name
                        </td>
                        <td>@entity.BirthDate.ToShortDateString()</td>
                        <td>@entity.Capital</td>
                        <td>@entity.Gross</td>
                        <td>@entity.isNew</td>
                        <td>@entity.lastPayDate.ToShortDateString()</td>
                        <td>
                            <a href="/BusinessDetail/Edit/@entity.UniqueId"><span class="glyphicon glyphicon-edit"></span> Edit</a> |
                            <a href="/BusinessDetail/Delete/@entity.UniqueId"><span class="glyphicon glyphicon-trash"></span> Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer text-center">
        Total of @Model.Count() records.
    </div>
</div>