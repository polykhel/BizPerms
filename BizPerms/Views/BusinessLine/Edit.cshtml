@model G4.BizPermit.Entities.BusinessLine
@{
    ViewBag.Title = "Edit Business Line";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header text-center">
    <h1 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">BUSINESS LINE</h1>
</div>

<div class="panel panel-warning">
    <div class="panel-heading">EDIT BUSINESS LINE</div>
    <div class="form-horizontal panel-body">
        <form action="@Url.Action("Edit")" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="UniqueId" value="@Model.UniqueId"/>

            <div class="form-group">
                <label class="control-label col-md-2">Business Line Code:</label>
                <input type="number" class="form-control col-md-10" name="Code" value="@Model.Code" placeholder="Business Line Code" required/>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Business Line Name:</label>
                <input type="text" class="form-control col-md-10" name="Name" value="@Model.Name" placeholder="Business Line Name" required />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Description:</label>
                <input type="text" class="form-control col-md-10" name="Description" value="@Model.Description" placeholder="Description"/>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Business Nature:</label>
                <select class="form-control col-md-10" name="BusinessNatureId" required>
                    @foreach (var nature in ViewBag.businessnature)
                    {
                        if (nature.Id == Model.BusinessNatureId)
                        {
                            <option value="@nature.Id" selected>@nature.BusinessNatureName</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Active:</label>
                @if(Model.isActive)
                {
                    <input type="radio" name="isActive" value="true" checked /> @:True
                    <input type="radio" name="isActive" value="false" /> @:False
                }
                else
                {
                <input type="radio" name="isActive" value="true"  /> @:True
                <input type="radio" name="isActive" value="false" checked/> @:False
                }
            </div>

            <div class="form-group">
                <a href="@Url.Action("Index")" class="btn btn-danger col-sm-offset-2">
                    <span class="glyphicon glyphicon-arrow-left"></span>&nbsp; Cancel
                </a>
                <button type="reset" class="btn btn-warning">
                    <span class="glyphicon glyphicon-refresh"></span>&nbsp; Reset
                </button>
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-floppy-disk"></span>&nbsp; Save
                </button>
            </div>
        </form>
    </div>
</div>