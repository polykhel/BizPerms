@model G4.BizPermit.Entities.BusinessOwner
@{
    ViewBag.Title = "Delete Business Owner";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header text-center">
    <h1 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">BUSINESS OWNER</h1>
</div>

<div class="panel panel-danger">
    <div class="panel-heading">ARE YOU SURE YOU WANT TO DELETE THIS RECORD?</div>
    <div class="form-horizontal panel-body">

        <dl class="dl-horizontal">
            <dt>Designation</dt>
            <dd>@Model.Designation</dd>

            <dt>First Name</dt>
            <dd>@Model.FirstName</dd>

            <dt>Last Name</dt>
            <dd>@Model.LastName</dd>

            <dt>Corporate Name</dt>
            <dd>@Model.CorporateName</dd>

            <dt>Gender</dt>
            <dd>@Model.Gender</dd>

            <dt>Marital Status</dt>
            <dd>@Model.MaritalStatus</dd>

            <dt>Birth Date</dt>
            <dd>@Model.BirthDate</dd>

            <dt>Corporate Name</dt>
            <dd>@Model.CorporateName</dd>

            <dt>Address</dt>
            <dd>@Model.Address</dd>

            <dt>Contact No.</dt>
            <dd>@Model.ContactNo</dd>

            <dt>Active</dt>
            <dd>@Html.DisplayFor(model => model.isActive)</dd>

        </dl>

        <form action="@Url.Action("Delete")" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="UniqueId" value="@Model.UniqueId" />
            <div class="form-group">
                <a href="@Url.Action("Index")" class="btn btn-primary col-sm-offset-2">
                    <span class="glyphicon glyphicon-arrow-left"></span>&nbsp; Cancel
                </a>
                <button type="submit" class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash"></span>&nbsp; Delete
                </button>
            </div>
        </form>
    </div>
</div>