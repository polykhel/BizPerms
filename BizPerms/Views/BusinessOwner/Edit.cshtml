@model G4.BizPermit.Entities.BusinessOwner
@{
    ViewBag.Title = "Edit Business Owner";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header text-center">
    <h1 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">BUSINESS OWNER</h1>
</div>

<div class="panel panel-warning">
    <div class="panel-heading">EDIT BUSINESS OWNER</div>
    <div class="form-horizontal panel-body">
        <form action="@Url.Action("Edit")" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="UniqueId" value="@Model.UniqueId" />

            <div class="form-group">
                <label class="control-label col-md-2">Designation:</label>
                <select class="form-control col-md-10" name="Designation" required>
                    @foreach (var designation in ViewBag.designation)
                    {
                        if (designation == Model.Designation)
                        {
                            <option value="@designation" selected>@designation</option>
                        }
                        else
                        {
                            <option value="@designation">@designation</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">First Name:</label>
                <input type="text" class="form-control col-md-10" name="FirstName" value="@Model.FirstName" placeholder="First Name" required />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Last Name:</label>
                <input type="text" class="form-control col-md-10" name="LastName" value="@Model.LastName" placeholder="Last Name" required />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Middle Name:</label>
                <input type="text" class="form-control col-md-10" name="MiddleName" value="@Model.MiddleName" placeholder="Middle Name"  />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Gender:</label>
                <select class="form-control col-md-10" name="Gender" required>
                    @foreach (var gender in ViewBag.gender)
                    {
                        if (gender == Model.Gender)
                        {
                            <option value="@gender" selected>@gender</option>
                        }
                        else
                        {
                            <option value="@gender">@gender</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Marital Status:</label>
                <select class="form-control col-md-10" name="MaritalStatus" required>
                    @foreach (var status in ViewBag.maritalstatus)
                    {
                        if (status == Model.MaritalStatus)
                        {
                            <option value="@status" selected>@status</option>
                        }
                        else
                        {
                            <option value="@status">@status</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Birth Date:</label>
                <input type="date" class="form-control col-md-10" name="BirthDate" value="@Model.BirthDate.ToString("yyyy-MM-dd")" required/>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Corporate Name:</label>
                <input type="text" class="form-control col-md-10" name="CorporateName" value="@Model.CorporateName" placeholder="Corporate Name" required/>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Address:</label>
                <input type="text" class="form-control col-md-10" name="Address" value="@Model.Address" placeholder="Address" />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Contact No:</label>
                <input type="text" class="form-control col-md-10" name="ContactNo" value="@Model.ContactNo" placeholder="Contact No."/>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Active:</label>
                @if (Model.isActive)
                {
                    <input type="radio" name="isActive" value="true" checked="checked" /> @:True
                    <input type="radio" name="isActive" value="false" /> @:False
                    }
                else
                {
                    <input type="radio" name="isActive" value="true" /> @:True
                    <input type="radio" name="isActive" value="false" checked="checked" /> @:False
                }
            </div>

            <div class="form-group">
                <a href="@Url.Action("Index")" class="btn btn-danger col-sm-offset-2">
                    <span class="glyphicon glyphicon-arrow-left"></span>&nbsp; Cancel
                </a>
                <button type="reset" class="btn btn-warning">
                    <span class="glyphicon glyphicon-refresh"></span>&nbsp; Reset
                </button>
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-floppy-disk"></span>&nbsp; Save
                </button>
            </div>
        </form>
    </div>
</div>