
@{
    ViewBag.Title = "Add City";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header text-center">
    <h1 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">CITY</h1>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">ADD CITY</div>
    <div class="form-horizontal panel-body">
        <form action="@Url.Action("Add")" class="form-horizontal" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="control-label col-md-2">City Code:</label>
                <input type="text" class="form-control col-md-10" name="Code" placeholder="City Code" required />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">City Name:</label>
                <input type="text" class="form-control col-md-10" name="Name" placeholder="City Name" required/>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Description:</label>
                <input type="text" class="form-control col-md-10" name="Description" placeholder="Description"/>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Province:</label>
                <select class="form-control col-md-10" name="ProvinceId" required>
                    <option value="" selected disabled>- Select Province -</option>
                    @foreach (var province in ViewBag.Provinces)
                    {
                        <option value="@province.Id">@province.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">is Active?</label>
                <input type="radio" class="radio-inline" name="isActive" value="true" checked="checked" /> True
                <input type="radio" class="radio-inline" name="isActive" value="false" /> False
            </div>

            <div class="form-group">
                <a href="@Url.Action("Index")" class="btn btn-danger col-sm-offset-2">
                    <span class="glyphicon glyphicon-arrow-left"></span>&nbsp; Cancel
                </a>
                <button type="reset" class="btn btn-warning">
                    <span class="glyphicon glyphicon-refresh"></span>&nbsp; Reset
                </button>
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-floppy-disk"></span>&nbsp; Save
                </button>
            </div>
        </form>
    </div>
</div>
