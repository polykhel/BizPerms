@model G4.BizPermit.Entities.District
@{
    ViewBag.Title = "Delete District";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header text-center">
    <h1 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">DISTRICT</h1>
</div>

<div class="panel panel-danger">
    <div class="panel-heading">ARE YOU SURE YOU WANT TO DELETE THIS RECORD?</div>
    <div class="form-horizontal panel-body">

        <dl class="dl-horizontal">
            <dt>District Code:</dt>
            <dd>@Model.Code</dd>

            <dt>District Name:</dt>
            <dd>@Model.Name</dd>

            <dt>Description:</dt>
            <dd>@Model.Description</dd>

            <dt>City:</dt>
            <dd>
                @foreach (var city in ViewBag.cities)
                {
                    if (city.Id == Model.CityId)
                    {
                        @city.Name
                    }
                }
            </dd>

            <dt>Active?</dt>
            <dd>@Html.DisplayFor(model => model.isActive)</dd>

        </dl>

        <form action="@Url.Action("Delete")" method="post">
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <input type="hidden" name="UniqueId" value="@Model.UniqueId" />
                <div class="form-group">
                    <a href="@Url.Action("Index")" class="btn btn-primary col-sm-offset-2">
                        <span class="glyphicon glyphicon-arrow-left"></span>&nbsp; Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <span class="glyphicon glyphicon-trash"></span>&nbsp; Delete
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>