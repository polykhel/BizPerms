@model G4.BizPermit.Entities.District
@{
    ViewBag.Title = "Edit District";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header text-center">
    <h1 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">DISTRICT</h1>
</div>

<div class="panel panel-warning">
    <div class="panel-heading">EDIT BARANGAY</div>
    <div class="form-horizontal panel-body">
        <form action="@Url.Action("Edit")" method="post">
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <input type="hidden" name="UniqueId" value="@Model.UniqueId" />

                <div class="form-group">
                    <label class="control-label col-md-2">District Code</label>
                    <input type="text" name="Code" class="form-control col-md-10" value="@Model.Code" placeholder="District Code" required/>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">District Name</label>
                    <input type="text" name="Name" class="form-control col-md-10" value="@Model.Name" placeholder="District Name" required/>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Description</label>
                    <input type="text" name="Description" class="form-control col-md-10" value="@Model.Description" placeholder="Description" />
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">City:</label>
                    <select class="form-control col-md-10" name="CityId" required>
                        @foreach (var city in ViewBag.Cities)
                        {
                            if (city.Id == Model.CityId)
                            {
                                <option value="@city.Id" selected>@city.Name</option>
                            }
                            else
                            {
                                <option value="@city.Id">@city.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Active</label>
                    <div class="col-md-10">
                        @if (Model.isActive == true)
                        {
                            <input type="radio" name="isActive" value="true" class="radio-inline" checked /> <span>True</span>
                            <input type="radio" name="isActive" value="false" class="radio-inline" /> <span>False</span>
                        }
                        else
                        {
                            <input type="radio" name="isActive" value="true" class="radio-inline" /> <span>True</span>
                            <input type="radio" name="isActive" value="false" class="radio-inline" checked /> <span>False</span>
                        }
                    </div>
                </div>

                <div class="form-group">
                    <a href="@Url.Action("Index")" class="btn btn-danger col-sm-offset-2">
                        <span class="glyphicon glyphicon-arrow-left"></span>&nbsp; Cancel
                    </a>
                    <button type="reset" class="btn btn-warning">
                        <span class="glyphicon glyphicon-refresh"></span>&nbsp; Reset
                    </button>
                    <button type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-floppy-disk"></span>&nbsp; Save
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>