@model List<G4.BizPermit.Entities.District>
@{
    ViewBag.Title = "Districts";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header text-center">
    <h1 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">DISTRICT</h1>
</div>

<div class="row" style="padding: 15px">
    <a type="button" class="btn btn-danger col-lg-1 col-md-2 col-sm-3 col-xs-3" aria-label="left Align" href="/Home">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back
    </a>
    <div class="col-lg-10 col-md-8 col-sm-6 col-xs-6"></div>
    <button type="button" class="btn btn-success col-lg-1 col-md-2 col-sm-3 col-xs-3" aria-label="left Align" onclick="location.href='@Url.Action("Add")'">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New
    </button>
</div>

<div class="panel panel-info">
    <div class="panel-body table-responsive">
        <p>Legislative districts of the Philippines.</p>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>District Code</th>
                    <th>District Name</th>
                    <th>Description</th>
                    <th>City</th>
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entity in Model)
            {
                    <tr>
                        <td>@entity.Code</td>
                        <td>@entity.Name</td>
                        <td>@entity.Description</td>
                        <td>
                            @entity.City.Name
                        </td>
                        <td>@entity.isActive</td>
                        <td><a href="/District/Edit/@entity.UniqueId"><span class="glyphicon glyphicon-edit"></span> Edit</a> |
                            <a href="/District/Delete/@entity.UniqueId"><span class="glyphicon glyphicon-trash"></span> Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer text-center">
        Total of @Model.Count() records.
    </div>
</div>