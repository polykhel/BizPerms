
@{
    ViewBag.Title = "Add Fees";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header text-center">
    <h1 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">FEES</h1>
</div>

<div class="panel panel-warning">
    <div class="panel-heading">ADD FEES</div>
    <div class="form-horizontal panel-body">
        <form action="@Url.Action("Add")" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="control-label col-md-2">Name: </label>
                <input type="text" class="form-control col-md-10" name="Name" placeholder="Name" required />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Rate: </label>
                <input type="number" step="0.01" class="form-control col-md-10" name="Rate" placeholder="Rate" required />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Status: </label>
                <select class="form-control col-md-10" name="StatusId">
                    @foreach (var status in ViewBag.Status)
                    {
                        <option value="@status.Id">@status.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Interest: </label>
                <input type="radio" name="withInterest" value="true" /> True
                <input type="radio" name="withInterest" value="false" /> False
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Quarterly: </label>
                <input type="radio" name="isQuarterly" value="true" /> True
                <input type="radio" name="isQuarterly" value="false" /> False
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Active: </label>
                <input type="radio" name="isActive" value="true"  /> True
                <input type="radio" name="isActive" value="false" /> False

            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Created By: </label>
                <input type="number" class="form-control col-md-10" name="CreatedBy" placeholder="CreatedBy" />
            </div>

            <div class="form-group">
                <a href="@Url.Action("Index")" class="btn btn-danger col-sm-offset-2">
                    <span class="glyphicon glyphicon-arrow-left"></span>&nbsp; Cancel
                </a>
                <button type="reset" class="btn btn-warning">
                    <span class="glyphicon glyphicon-refresh"></span>&nbsp; Reset
                </button>
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-floppy-disk"></span>&nbsp; Save
                </button>
            </div>
        </form>
    </div>
</div>

