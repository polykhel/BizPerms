@model G4.BizPermit.Entities.Requirement
@{
    ViewBag.Title = "Edit Requirement";
}

<div class="page-header text-center">
    <h1 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">REQUIREMENT</h1>
</div>

<div class="panel panel-warning">
    <div class="panel-heading">EDIT REQUIREMENT</div>
    <div class="form-horizontal panel-body">
        <form action="@Url.Action("Edit")" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" value="@Model.UniqueId" name="UniqueId" />
            <div class="form-group">
                <label class="control-label col-md-2">Requirement Name:</label>
                <input type="text" class="form-control col-md-10" name="Name" value="@Model.Name" placeholder="Requirement Name" required />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Status:</label>
                <select class="form-control col-md-10" name="StatusId">
                    @foreach (var status in ViewBag.statuses)
                    {
                        if (status.Id == Model.StatusId)
                        {
                            <option value="@status.Id" selected>@status.Name</option>
                        }
                        else
                        {
                            <option value="@status.Id">@status.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Active?:</label>
                @if (Model.IsActive)
                {
                    <input type="radio" name="IsActive" value="true" checked="checked" /> @:True
                    <input type="radio" name="IsActive" value="false" /> @:False
                }
                else
                {
                    <input type="radio" name="IsActive" value="true" /> @:True
                    <input type="radio" name="IsActive" value="false" checked="checked" /> @:False
                }
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Created By:</label>
                <input type="text" class="form-control col-md-10" name="CreatedBy" value="@Model.CreatedBy" placeholder="Created By" required />
            </div>

            <div class="form-group">
                <input type="hidden" name="UniqueId" value="@Model.UniqueId" />
                <a href="@Url.Action("Index")" class="btn btn-danger col-sm-offset-2">
                    <span class="glyphicon glyphicon-arrow-left"></span>&nbsp; Cancel
                </a>
                <button type="reset" class="btn btn-warning">
                    <span class="glyphicon glyphicon-refresh"></span>&nbsp; Reset
                </button>
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-floppy-disk"></span>&nbsp; Save
                </button>
            </div>
        </form>
    </div>
</div>