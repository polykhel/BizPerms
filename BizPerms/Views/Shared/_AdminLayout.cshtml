<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | BizPerms</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/custom.css" rel="stylesheet" type="text/css" />
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav id="tf-menu" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BizPerms", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/Home">Home <span class="sr-only">(current)</span></a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Service <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-header">Services</li>
                            <li><a href="/BusinessRecord">Register</a></li>
                            <li><a href="/Assessment">Assessment</a></li>
                            <li><a href="/Collection">Collection</a></li>
                            <li><a href="/Issuance">Issuance of Permit</a></li>
                            <li><a href="/Reports">Reports</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Maintenance <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-header">Fees</li>
                            <li><a href="/Fee">Fees Master</a></li>
                            <li><a href="/Quarter">Quarter</a></li>
                            <li><a href="/Cutoff">Cutoff</a></li>
                            <li><a href="/Banks">Banks</a></li>
                            <li><a href="/Requirement">Requirements</a></li>
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">Business</li>
                            <li><a href="/BusinessRecord">Business Record</a></li>
                            <li><a href="/BusinessDetail">Business Detail</a></li>
                            <li><a href="/BusinessLine">Business Line</a></li>
                            <li><a href="/BusinessNature">Business Nature</a></li>
                            <li><a href="/BusinessOwner">Business Owner</a></li>
                            <li><a href="/BusinessType">Business Type</a></li>
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">Address</li>
                            <li><a href="/Province">Province</a></li>
                            <li><a href="/City">City</a></li>
                            <li><a href="/District">District</a></li>
                            <li><a href="/Barangay">Barangay</a></li>
                            <li><a href="/Street">Street</a></li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BizPerms. All Rights Reserved.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript" src="~/Scripts/ajax.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
