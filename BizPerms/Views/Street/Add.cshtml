
@{
    ViewBag.Title = "Add Street";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header text-center">
    <h1 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">STREET</h1>
</div>

<form action="@Url.Action("Add")" method="post">
    @Html.AntiForgeryToken()
    <div class="panel panel-primary">

        <div class="panel-heading">ADD STREET</div>

        <div class="form-horizontal panel-body">
            <div class="form-group">
                <label class="control-label col-md-2">Street Code:</label>
                <input type="number" class="form-control col-md-10" name="Code" placeholder="Street Code" required/>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Street Name:</label>
                <input type="text" class="form-control col-md-10" name="Name" placeholder="Street Name" required />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Description:</label>
                <input type="text" class="form-control col-md-10" name="Description" placeholder="Description" />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Barangay:</label>
                <select class="form-control col-md-10" name="BarangayId">
                    <option value="" selected disabled>- Select Barangay -</option>
                    @foreach(var barangay in ViewBag.barangays)
                    {
                        <option value="@barangay.Id">@barangay.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Active:</label>
                <input type="radio" class="radio-inline" name="isActive" value="true" checked="checked" /> True
                <input type="radio" class="radio-inline" name="isActive" value="false" /> False
            </div>

            <div class="form-group">
                <a href="@Url.Action("Index")" class="btn btn-danger col-sm-offset-2">
                    <span class="glyphicon glyphicon-arrow-left"></span>&nbsp; Cancel
                </a>
                <button type="reset" class="btn btn-warning">
                    <span class="glyphicon glyphicon-refresh"></span>&nbsp; Reset
                </button>
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-floppy-disk"></span>&nbsp; Save
                </button>
            </div>
        </div>
    </div>
</form>