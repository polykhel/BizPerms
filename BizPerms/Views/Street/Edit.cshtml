@model G4.BizPermit.Entities.Street
@{
    ViewBag.Title = "Add Street";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header text-center">
    <h1 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">STREET</h1>
</div>

<form action="@Url.Action("Edit")" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="UniqueId" value="@Model.UniqueId" />

    <div class="panel panel-warning">
        <div class="panel-heading">EDIT STREET</div>
        <div class="form-horizontal panel-body">
            <div class="form-group">
                <label class="control-label col-md-2">Street Code:</label>
                <input type="number" class="form-control col-md-10" name="Code" value="@Model.Code" placeholder="Street Code" required/>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Street Name:</label>
                <input type="text" class="form-control col-md-10" name="Name" value="@Model.Name" placeholder="Street Name" required />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Description:</label>
                <input type="text" class="form-control col-md-10" name="Description" value="@Model.Description" placeholder="Description" />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Barangay:</label>
                <select class="form-control col-md-10" name="BarangayId">
                    @foreach (var barangay in ViewBag.barangays)
                    {
                        if (barangay.Id == Model.BarangayId)
                        {
                            <option value="@barangay.Id" selected>@barangay.Name</option>
                        }
                        else
                        {
                            <option value="@barangay.Id">@barangay.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Active:</label>
                @if (Model.isActive)
                {
                    <input type="radio" name="isActive" value="true" checked="checked" /> @:True
                    <input type="radio" name="isActive" value="false" /> @:False
                }
                else
                {
                    <input type="radio" name="isActive" value="true" /> @:True
                    <input type="radio" name="isActive" value="false" checked="checked" /> @:False
                }
            </div>

            <div class="form-group">
                <a href="@Url.Action("Index")" class="btn btn-danger col-sm-offset-2">
                    <span class="glyphicon glyphicon-arrow-left"></span>&nbsp; Cancel
                </a>
                <button type="reset" class="btn btn-warning">
                    <span class="glyphicon glyphicon-refresh"></span>&nbsp; Reset
                </button>
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-floppy-disk"></span>&nbsp; Save
                </button>
            </div>
        </div>
    </div>
</form>